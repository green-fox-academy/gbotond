@model List<TeamManagerApp.Models.Post>

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    @*<link rel="stylesheet" type="text/css" href="~/StyleHome.css">*@
    <title>Home Page</title>
    <style>
        .topnav {
            background-color: #333;
            overflow: hidden;
        }

            .topnav a {
                float: left;
                display: block;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav a:hover {
                    background-color: #ddd;
                    color: black;
                }

                .topnav a.active {
                    background-color: #4CAF50;
                    color: white;
                }
    </style>
</head>
<body>
    <div class="topnav" id="myTopnav">
        <a href="/">Home</a>
        <a href="/teaminfo">Team</a>
        <a href="#groups">Groups</a>
    </div>
    <div class="jumbotron container">
        <h1>Reddit</h1>
        <button class="btn btn-default" type="submit">@Html.ActionLink("Add new post", "Add", "Home")</button>
        <p></p>
        <table class="table table-bordered">
            <tr>
                <th class="text-center">CREATED</th>
                <th class="text-center">TITLE</th>
                <th class="text-center">SCORE</th>
                <th class="text-center">UPVOTES</th>
                <th class="text-center">DOWNVOTES</th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.Date.Day.@post.Date.Month.@post.Date.Year.</td>
                    <td>@post.Title</td>
                    <td>
                        @{var total = @post.UpVote - @post.DownVote;}
                        @total
                    </td>
                    <td>@post.UpVote</td>
                    <td>@post.DownVote</td>
                    <td class="text-center">
                        <form action="/@post.Id/upvote" method="get">
                            <input type="hidden" name="Id" value="@post.Id" />
                            <button class="btn btn-default" type="submit">
                                <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
                            </button>
                        </form>
                    </td>
                    <td class="text-center">
                        <form action="/@post.Id/downvote" method="get">
                            <input type="hidden" name="Id" value="@post.Id" />
                            <button class="btn btn-default" type="submit">
                                <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
                            </button>
                        </form>
                    </td>
                </tr>
                            }
        </table>
    </div>
</body>
</html>
