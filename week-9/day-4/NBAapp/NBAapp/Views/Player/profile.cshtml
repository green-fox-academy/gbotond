@model NBAapp.Models.Player

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Player Profile's </title>
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            margin: auto;
            text-align: center;
        }

        .title {
            color: grey;
            font-size: 18px;
        }

        button {
            border: none;
            outline: 0;
            display: inline-block;
            padding: 8px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
        }

        a {
            text-decoration: none;
            font-size: 22px;
            color: black;
        }

            button:hover, a:hover {
                opacity: 0.7;
            }
        table {
            border-collapse: collapse;
            width: 800px;
            height: 200px;
            background-color: #fff;
        }

        table, th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        tr:hover {
            background-color: #f5f5f5
        }
    </style>
</head>
<body>
    <!-- Add icon library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <div class="card">
        <img src="~/Images/irving.png" alt="Kyrie" style="width:100%">
        <h1>Kyrie Irving</h1>
        <p class="title">Point Guard</p>
        <p><button>Contact</button></p>
    </div>
    <table>
        <tr>
            <td></td>
            <td>Name</td>
            <td>Position</td>
            <td>Ppg</td>
            <td>FG%</td>
            <td>3pt%</td>
            <td>Assist</td>
            <td>Steal</td>
            <td>Rebound</td>
        </tr>      
        <tr>
            <td><img src="~/Images/irving.png" width="100" height="75" /></td>
            <td>@Model.Name</td>
            <td>@Model.Position</td>
            <td>24.6</td>
            <td>47%</td>
            <td>41%</td>
            <td>8.4</td>
            <td>2.1</td>
            <td>4.3</td> 
            <td>
                <form action="/player/update" method="post">
                    <div>
                        <button type="submit">Update</button>
                    </div>
                </form>
            </td>
        </tr>
    </table>
</body>
</html>
