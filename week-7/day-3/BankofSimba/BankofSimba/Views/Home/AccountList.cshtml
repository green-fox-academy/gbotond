@model BankofSimba.Models.Bank

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<style>
    table {
        border-collapse: collapse;
        width: 600px;
        height: 150px;
    }

    table, th, td {
        border: 3px solid black;
    }
</style>
</head>
<body>
<style>
    body {
        background-image: url("https://media.giphy.com/media/fiJRJ6BlNrKuI/giphy.gif");
        background-size: 100% 100%;
    }
</style>
    <table>
        <tr>
            <td>Index</td>
            <td>Name</td>
            <td>Species</td>
            <td>Wealth in Zebras</td>
            <td>Role</td>
            <td>Donate</td>
        </tr>
        @{ int index = 0; }
        @foreach (var account in Model.Accounts)
            {
            <tr style="@((@account.IsKing) ? "color:gold" : "color:grey") ">
                <td>@(++index)</td>
                <td>@account.Name</td>
                <td>@account.AnimalType</td>
                <td>@account.Balance.ToString("0.00") @account.Currency</td>
                <td>@((@account.IsGood) ? "Good One" : "Bad Guy")</td>
                @using (Html.BeginForm("action", "home"))
                {
                    <td><input type="submit" value="Raise" /></td>
                }
            </tr>
        }
    </table>

</body>
</html>

