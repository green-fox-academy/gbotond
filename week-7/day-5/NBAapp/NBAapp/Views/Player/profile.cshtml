@model NBAapp.Models.Player

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Player Profile's </title>
    <style>
        table {
            border-collapse: collapse;
            width: 600px;
            height: 150px;
            background-color: whitesmoke;
        }

        table, th, td {
            border: 3px solid black;
            font-size: 24px;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <td></td>
            <td>Name</td>
            <td>Position</td>
            <td>Ppg</td>
            <td>FG%</td>
            <td>3pt%</td>
            <td>Assist</td>
            <td>Steal</td>
            <td>Rebound</td>
        </tr>      
        <tr>
            <td><img src="~/Images/irving.png" width="100" height="75" /></td>
            <td>@Model.Name</td>
            <td>@Model.Position</td>
            <td>24.6</td>
            <td>47%</td>
            <td>41%</td>
            <td>8.4</td>
            <td>2.1</td>
            <td>4.3</td> 
            <td>
                <form action="/player/update" method="post">
                    <div>
                        <button type="submit">Update</button>
                    </div>
                </form>
            </td>
        </tr>
    </table>
</body>
</html>
